# UPR - Environment Variables Example
# Copy this file to .env and fill in your actual values

# ====================
# DATABASE (GCP Cloud SQL)
# ====================
DATABASE_URL=postgresql://user:password@host:5432/database
# Production: Managed via GCP Secret Manager (uses Cloud SQL Proxy)
# Example: postgresql://upr_app:password@/upr_production?host=/cloudsql/PROJECT:REGION:INSTANCE

# ====================
# TENANT CONFIGURATION
# ====================
TENANT_ID=your-tenant-uuid-here
# Get this from your tenants table after running migrations

# ====================
# AI & SEARCH APIs
# ====================
OPENAI_API_KEY=sk-...
# Get from: https://platform.openai.com/api-keys

SERPAPI_KEY=your_serpapi_key_here
# Get from: https://serpapi.com/manage-api-key

# ====================
# RADAR CONFIGURATION
# ====================
RADAR_ENABLED=true
# Set to 'false' to disable RADAR discovery module

MAX_RUN_BUDGET_USD=2.00
# Maximum spend per RADAR run (default: $2.00)

BATCH_LLM_SIZE=5
# Number of companies to process per LLM batch

# ====================
# AUTHENTICATION
# ====================
JWT_SECRET=your-very-long-random-secret-here
# Generate with: openssl rand -base64 64

ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password

# ====================
# SERVER CONFIGURATION
# ====================
PORT=8080
NODE_ENV=production
# Options: development, production

# ====================
# OPTIONAL: EXTERNAL SERVICES
# ====================
# Apollo.io API (for enrichment)
# APOLLO_API_KEY=your_apollo_key

# NeverBounce API (for email verification)
# NEVERBOUNCE_API_KEY=your_neverbounce_key

# Redis (for caching - optional)
# REDIS_URL=redis://localhost:6379

# ====================
# GOOGLE CLOUD (Production)
# ====================
# These are managed via Google Secret Manager in production
# Only needed for local development

# GCP_PROJECT_ID=your-gcp-project
# GCP_REGION=us-central1
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json
